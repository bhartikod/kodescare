<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: " Enter Name" %>
  </div><br>
    <div class="field">
    <%= f.label :select_id_proof %><br />
    <%= f.select :select_id_proof, ['AadharCard', 'DrivingLicence', 'Passport', 'VoterId',], prompt: 'Select ID Proof' %>
  </div>
  <div class="field">
    <%= f.label :enter_id_number %><br />
    <%= f.text_field :enter_id_number, autofocus: true, autocomplete: "Enter Id Number" %>
  </div>
  <div class="field">
    <%= f.label :contact_num %><br />
    <%= f.number_field :contact_num, autofocus: true, autocomplete: "Enter  Mobile Number" %>
  </div>
   <div class="field">
    <%= f.label :document_link %><br />
    <%= f.text_field :document_link, autofocus: true, autocomplete: "Enter  Mobile Number" %>
  </div>
   <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: " Enter Email" %>
  </div>
  <div class="field">
    <%#= f.label :verification_code %><br />
    <%#= f.number_field :verification_code, autofocus: true, autocomplete: "Verification Code" %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <%= f.hidden_field :general_information_id, value: params[:general_information_id] %>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
